<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.drigio.labs.callblock.PriorityCallFragment"
    android:orientation="vertical"
    android:gravity="center"
    >

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/priorityContact1"
        android:inputType="number"
        android:maxLength="10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_priority_calls_priorityContact1TextView"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/priorityContact2"
        android:inputType="number"
        android:maxLength="10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_priority_calls_priorityContact2TextView"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/priorityContact3"
        android:inputType="number"
        android:maxLength="10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_priority_calls_priorityContact3TextView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/fragment_priority_calls_savePriorityContactsButton"
        android:id="@+id/savePriorityContacts"
        />

</LinearLayout>
